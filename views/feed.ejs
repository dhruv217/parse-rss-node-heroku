<!-- views/index.ejs -->
<!doctype html>
<html class="no-js" lang="EN">
   <head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>Rss Feed</title>
    <link rel="stylesheet" href="/static/bootstrap/dist/css/bootstrap.min.css"/>
    <script src="/static/jquery/dist/jquery.min.js"></script>
    <script src="/static/jquery-ui/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="/static/css/index.css"/>
    <link rel="stylesheet" href="/static/font-awesome/css/font-awesome.min.css"/>
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
  </head>
    <body>
        
        <div class="container">
          <div class="jumbotron">
          <h1 class="text-center"> Rss Feed Reader</h1>            
          <div class="container row">
            <% if (url.length > 0) { %>
              <div id="url" class="text-center"><h3>Rss Feed : <%= url %></h3></div>
            <% } %>
            <div class="list-group">
              <% articles.forEach(function(article) { %>
              <a href="<%=article.link%>" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                  <h3 class="mb-1"><%= article.title%></h3><small class="pull-right pull-up"><%=article.published%></small>                  
                </div>
                <% if (article.author > 0) { %><small>Author : <%=article.author%></small><% } %>
                <h7 class="mb-1"><%=article.content%></h7>
              </a>
              <% }); %>
            </div>
          </div>
        </div>
        <nav class="navbar navbar-default navbar-fixed-bottom">
            <div class="container text-center" >
              <h3>Developed By :- Dhruv Tripathi</h4>
            </div>
        </nav>

    </body>
</html>
